<!-- CHILD THEME HEADER -->
<section class="hl__header-child">
  <div class="hl__header-child__title hl__header-child__title--teal">
    <a href="/" title="Harvard Geospatial Library"><span>Harvard</span> Geospatial Library</a>
  </div>
  <div class="hl__header-child__logo">
    <section class="hl__linked-image">
      <a href="https://library.harvard.edu" title="Harvard Library">
        <%= image_tag("hl-logo-horizontal.svg", alt: "Harvard Library logo") %>
      </a>
    </section>
  </div>
</section>


<!-- DARK NAV -->
<nav class="navbar navbar-expand-md navbar-dark bg-dark topbar" aria-label="user">
  <div class="<%= container_classes %>">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#user-util-collapse" aria-controls="user-util-collapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-md-end" id="user-util-collapse">
      <%= render 'shared/user_util_links' %>
    </div>
  </div>
</nav>

<!-- SEARCHBAR -->
<% if controller_name == 'catalog' && !(has_search_parameters? || params[:action] == 'show') %>
  <!-- HOMEPAGE LAYOUT ON _HOME_TEXT.HTML.ERB -->
<% elsif controller_name == 'catalog' && (has_search_parameters? || params[:action] == 'show') %>
<!-- SEARCH RESULTS + ITEM DETAIL -->
  <div class="searchbar__wrapper" role="navigation">
    <div class="<%= container_classes %>">
      <%= render_search_bar  %>
      <% if query_has_constraints? %>
        <div class="search-constraints">
          <%= render_constraints(params) %>
          <div class="facets__clearall">
            <%=link_to 'Clear All', search_catalog_path, :class => "" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <!-- EVERYWHERE ELSE -->
  <div class="searchbar__wrapper" role="navigation">
    <div class="<%= container_classes %>">
      <%= render_search_bar  %>
    </div>
  </div>
<% end %>
