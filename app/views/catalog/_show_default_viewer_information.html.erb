<% if document.item_viewer.index_map %>
<div class='row'>
  <div class="index-map__directions">
    Click map to explore index
    <span>
      <%= render :partial => 'svg/pointer-finger' %>
    </span>
  </div>

  <div class="index-map__legend">
    <div class="index-map__legend-info">
      <span class="index-map__legend--yellow"></span>
      <p>Map held by collection</p>
    </div>
    <div class="index-map__legend-info">
      <span class="index-map__legend--green"></span>
      <p>Map not held by collection</p>
    </div>
    <div class="index-map__legend-info">
      <span class="index-map__legend--blue"></span>
      <p>Selected map tile</p>
    </div>
  </div>

  <div class='viewer-information col-sm-12'>
  </div>
</div>
<% end %>
